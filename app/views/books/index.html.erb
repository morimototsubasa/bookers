<h1>Books</h1>
<% @books.each do |book| %>
<table>
 <thead>
   <tr>
     <th>title</th>
     <th>body</th>
     <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
   <% @books.each do |book| %>
   <tr>
   <td><%= book.title %></td>
   <td><%= book.body%></td>
   <td><%= link_to "show", book_path(book.id) %></td>
   <td><%= link_to "edit", edit_book_path(book.id)%></td>
   <td><%= link_to "destory", destory_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
   </tr>
   <% end %>
 </tbody>
</table>
  <h3>New book</h3>
  <span><%= link_to book.title, book_path(book.id) %></span>
<% end %>